<%= render :partial => "wiki/related_sidebar" %>
<div class="span9">

  <% if @node.main_image %>
    <a href="<%= @node.main_image.path(:original) %>"><img class="img-rounded span9" src="<%= @node.main_image.path(:default) %>" /></a>
    <br />
    <br style="clear:both;" />
  <% end %>

  <div class="btn-toolbar pull-right" style="margin-left:10px;">
    <div class="btn-group">
      <a class="btn btn-small" rel="popover" data-content="<%= "No tags" if @tagnames.length == 0 %><% @tagnames.each do |tag| %><a class='label label-inverse'><%= tag %></a> <% end %><hr /><a class='btn btn-small'><i class='icon-user'></i> <%= @node.author.name %></a>" title="Follow by tag or author" data-placement="bottom"><b class="caret"></b></a>
      <a rel="tooltip" title="Helpful? Awesome?" class="btn btn-small" href="#"><i class="icon-star"></i> Like (8)</a>
      <a rel="tooltip" title="Updates/comments" id="follow" class="btn btn-small" href="#"><i class="icon-eye-open"></i> Follow</a>
    </div>
  </div>
  <h2 style="clear:left;"><%= @node.title %></h2>

  <div>
    <div class="btn-group pull-right">
      <% if @node.prev_by_author %><a class="btn btn-link" href="/<%= @node.prev_by_author.slug %>">&laquo;</a><script>$(document).keydown(function(e){ if (e.keyCode == 37) { window.location = "http://"+(window.location+'').split('/')[2]+"/<%= @node.prev_by_author.slug %>" }})</script><% end %>
      <% if @node.next_by_author %><a class="btn btn-link" href="/<%= @node.next_by_author.slug %>">&raquo;</a><script>$(document).keydown(function(e){ if (e.keyCode == 39) { window.location = "http://"+(window.location+'').split('/')[2]+"/<%= @node.next_by_author.slug %>" }})</script><% end %>
    </div>
    <span>
      by <a href="/notes/author/<%= @node.author.name %>"><%= @node.author.name %></a> |
      <%= @node.created_at.to_s(:long) %> |
      <%= @node.totalcount %> views
    </span>
  </div>
  <!--<li class="pull-right"><%= render :partial => "home/social" %></li>-->
  <hr />

  <% @node.gallery.each do |image| %>
    <a href="<%= image.image.path(:original) %>"><img style="margin-bottom:4px;" class="img-rounded" src="<%= image.image.path(:thumb) %>" /></a>
  <% end %>

  <p>
  <%= raw RDiscount.new(auto_link(@node.body, :sanitize => false)).to_html %>
  </p>

  <hr />
  <p>
    <b>Tags:</b>
    <% @node.tags.each do |tag| %><a class="label label-info" href="/tag/<%= tag.name %>"><%= tag.name %></a> <% end %>
  </p>

  <hr />
    <%= render :partial => "home/social" %>
  <hr />

  <div class="input-prepend">
    <span class="add-on"><i class="icon-tags"></i></span>
    <input type="text" class="span6" placeholder="balloon mapping" data-provide="typeahead" data-source="['balloon-mapping','kite-mapping','spectrometry','near-infrared-camera','thermal-flashlight']">
  </div>

  <div>
    <%= render :partial => "notes/comments" %>
  </div>

</div><!--/span-->
