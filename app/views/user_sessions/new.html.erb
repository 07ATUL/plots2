<div class="container">

<%= form_for @user_session, :as => :user_session, :url => { :action => "create" }, :html => {:class => "form col-md-6 offset-3"} do |f| %>

  <h2>Log in <small> or <a href="/signup">sign up to join</a> the Public Lab network</small></h2>

  <% if f.error_messages != "" %><div class="alert alert-danger"><%= f.error_messages %></div><% end %>

  <br style="clear:both;"/>

  <div class="form-group">

    <label for="username">Username</label>
    <%= f.text_field :username, { tabindex: 1, class: 'form-control', id: 'username' } %>

  </div>

  <div class="form-group">

    <label for="password">Password</label>
    <%= f.password_field :password, { tabindex: 2, class: 'form-control', id: 'password' } %>

  </div>
 
  <input type="hidden" name="return_to" value="<%= params[:return_to] %>" />

  <div class="checkbox">
    <label>
      <%= f.check_box :remember_me %> Remember me
    </label>
  </div>

  <div class="input-group-inline">

    <button class="btn btn-primary btn-lg" type="submit" tabindex="3">Log in</button> 
    <a class="btn btn-default btn-lg" href="/signup" tabindex="4">Sign up</a>

  </div>

  <br />
  <p style="color: #888;">Forgotten or lost your password? Reset it by <a href="/reset/">clicking here</a></p>

<% end %>

</div>
