<h1>Log in</h1>

<%= form_for @user_session, :as => :user_session, :url => { :action => "create" }, :html => {:class => "form"} do |f| %>
  <% if f.error_messages != "" %><div class="alert alert-error"><%= f.error_messages %></div><% end %>

  <div style="width:50%;">

    <p>Use your <a href="http://publiclaboratory.org">PublicLaboratory.org</a> username to log in.</p> 

    <p>This is an "alpha" website; the full Public Lab website is <a href="http://publiclaboratory.org">PublicLaboratory.org</a>.</p>

  </div>

  <br style="clear:both;"/>

<!--
  <p><%= f.text_field :username, {:placeholder => "username"} %></p>
  <p><%= f.password_field :password, {:placeholder => "password"} %></p>

  <h2>Or use OpenID</h2>
-->
  <p><%= f.text_field :openid_identifier, {:placecholder => "username", :tabindex => 2} %></p>

  <p><label class="checkbox">
    <%= f.check_box :remember_me %> Remember me
  </p></label>

  <p>
    <button class="btn-large btn-primary" type="submit">Log in</button>
  </p>
<% end %>

