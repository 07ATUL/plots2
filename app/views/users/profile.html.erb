<div class="span3">
  <!--<a href="#" class="btn btn-block"><i class="icon-envelope"></i> Send message</a>-->
  <a href="#" class="btn btn-block"><i class="icon-eye-open"></i> Follow <%= @user.name %></a>
  <hr />

</div>

<div class="span9">
  <h3 style="margin-top:0;"><%= @user.name %> 
    <small> 
      <a href="/notes/author/<%= @user.name %>"><%= @user.node_count %> research notes</a> and wiki edits
      | <a href="/profile/<%= @user.name %>/likes"><i class="icon icon-star-empty"></i> <%= @user.like_count %> likes</a>
    </small>
  </h3>

  <p>
    <div class="btn-group">
    <a class="btn btn-small" href="/feed/<%= @user.name %>.rss"><i class="icon icon-rss"></i> RSS</a>
    <% if current_user && current_user.uid == @user.uid %>
      <a href="/profile/<%= @user.name %>/edit" class="btn btn-small"><i class="icon-pencil"></i> Edit profile</a>
    <% end %>
    </div>
    &nbsp; <small>Joined <%= time_ago_in_words(@user.created_at) %> ago</small>
  </p>

  <p><%= raw auto_link(RDiscount.new(@user.bio).to_html, :sanitize => false) %></p>

  <hr />

  <% if @user.user.mapknitter_maps %>

  <h4>Maps at <a href="http://mapknitter.org">MapKnitter.org</a></h4>

  <p><i>View these maps <a href="http://mapknitter.org/feed/author/<%= @user.name %>">at MapKnitter.org &raquo;</a></i></a>

  <table class="table">
    <tr>
      <th>Title</th>
      <th>Creation date</th>
      <th>Description</th>
    </tr>
    <% @user.user.mapknitter_maps.each_with_index do |map, i| %>
    <tr>
      <td><a href="<%= map.link %>"><i class="icon icon-map-marker"></i> <%= map.title %></a></td>
      <td><%= time_ago_in_words(map.pubDate) %> ago</td>
      <td><%= raw map.description.truncate(100) %></td>
    </tr>
    <% end %>
  </table>

  <% end %>

  <hr />
</div>
