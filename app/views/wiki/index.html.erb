<%= render :partial => "wiki/related_sidebar" %>
<div class="span9">
  <% if params[:controller] == "tag" %>
    <h3 style="margin-top:0;">Wiki pages tagged with <i style="color:#aaa;"><%= params[:id] %></i></h3>
  <% elsif params[:action] == "author" %>
    <h3 style="margin-top:0;">Wiki pages by <a href="/people/<%= @user.name %>"><%= @user.name %></a> <small><%= @user.notes.length %> research notes and wiki edits starting <%= time_ago_in_words(@user.notes.first.created_at) %> ago</small></h3>
  <% else %>
    <h2>Wiki pages <small>collaborative documentation by contributors like you</small></h2>
  <% end %>


    <table class="table">
      <tr>
        <th>Title</th>
        <th>Last edited</th>
        <th>Edits</th>
      </tr>
      <% @wikis.each do |wiki| %>
        <tr>
          <td><i class="icon-file"></i> <a href="/wiki/<%= wiki.slug %>"><%= wiki.title %></a></td>
          <td><%= time_ago_in_words(wiki.created_at) %> ago by 
          <a href="/notes/author/<%= wiki.author.name %>"><%= wiki.author.name %></td>
          <td><%= wiki.revisions.length %></td>
        </tr>
      <% end %>
    </table>

  <hr />
  
</div><!--/span-->
