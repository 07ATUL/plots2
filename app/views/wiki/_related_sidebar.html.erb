<div class="span3">
  <a rel="tooltip" title="Post about <%= @tagnames.join(', ') %>" data-placement="bottom" style="margin-bottom:6px;" href="/post<%= '?tags='+@tagnames.join(',') if @tagnames %><% if params[:controller] == 'notes' && params[:action] == 'show' %>,response:<%= @node.id %><% end %>" class="btn btn-primary btn-large btn-block"><i class="icon-pencil icon-white"></i> Post related work &raquo;</a>

  <%= render :partial => "wiki/place_sidebar" %>

  <br />

  <div class="accordion" id="accordion2">
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
          <h4 style="color:#444;">Recent contributors</h4>
        </a>
      </div>
      <div id="collapseOne" class="accordion-body collapse in">
      <% if @notes && @notes.length > 0 %>
        <% @notes.collect(&:author).collect(&:name).uniq.each do |author| %>
          <div class="accordion-inner"><a href="/notes/author/<%= author %>/<%= @tagnames.join('+') %>"><i class="icon-user"></i> <%= author %></a></div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>

  <% if @notes && @notes.length > 0 %>
  <h4>Recent topic contributors</h4>
  <ul class="nav">
    <% @notes.collect(&:author).collect(&:name).uniq.each do |author| %>
      <li><a href="/notes/author/<%= author %>/<%= @tagnames.join('+') %>"><i class="icon-user"></i> <%= author %></a></li>
    <% end %>
  </ul>
  <% end %>

  <% if @videos && @videos.length > 0 %>
  <h4>Related videos</h4>
  <ul class="nav bullet">
    <% @videos.each do |note| %>
      <li><a href="/<%= note.slug %>"><i class="icon-film"></i> <%= note.title %></a></li>
    <% end %>
    <% if params[:controller] == "search" %>
      <li><a href="/tag/<%= params[:id] %>">More...</a></li>
    <% end %>
  </ul>
  <% end %>

  <% if @wikis && @wikis.length > 0 %>
  <h4>Related wiki pages</h4>
  <ul class="nav bullet">
    <% @wikis.each do |wiki| %>
      <li><a href="/wiki/<%= wiki.slug %>"><i class="icon-book"></i> <%= wiki.title %></a></li>
    <% end %>
    <% if params[:controller] == "search" %>
      <li><a href="/tag/<%= params[:id] %>">More...</a></li>
    <% end %>
  </ul>
  <% end %>

  <% if @notes && @notes.length > 0 %>
  <h4>Related research notes</h4>
  <ul class="nav bullet">
    <% @notes.each do |note| %>
      <li><a href="/<%= note.slug %>"><i class="icon-file"></i> <%= note.title %></a></li>
    <% end %>
    <% if params[:controller] == "search" %>
      <li><a href="/tag/<%= params[:id] %>">More...</a></li>
    <% end %>
  </ul>
  <% end %>

  <hr style="margin-bottom:6px;" />
  <p><small><a href="#"><i class="icon-cog"></i> Options</a></small></p>

</div>
