  <form class="well post" action="http://publiclaboratory.org/note/add">
    <h3 style="margin-top:0;">Share your work</h3>

    <div class="sidebar-nav pull-right span3">
      <div id="images">
        <img onClick="$E.image(this.src)" id="img1" style="margin-right:3px;" class="img-rounded span6" src="http://publiclaboratory.org/sites/default/files/imagecache/thumb/_IGP4548.jpg" /></a>
