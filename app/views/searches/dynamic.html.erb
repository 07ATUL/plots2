<% content_for (:head), javascript_include_tag "dynamic_search" %>

<%= render :partial => "sidebar/related" %>

<div class="col-md-9">
  <h3 style="margin-top:0;">Dynamic Search Page</h3>

  <hr />

  <div class="container">
    <div class="row">
      <div class="col-md-12">
          <div class="panel with-nav-tabs panel-primary">
              <div class="panel-heading clearfix">
                  <div class="pull-left">
                      <h1 class="panel-title">Search Results</h1>
                  </div>
                  <div class="pull-right">
                      <ul class="nav nav-tabs">
                          <li class="active"><a href="#taball" data-toggle="tab">All (<span id="allcount">0</span>)</a></li>
                          <li><a href="#tabnotes" data-toggle="tab">Notes (<span id="notecount">0</span>)</a></li>
                          <li><a href="#tabprofiles" data-toggle="tab">Profiles (<span id="profilecount">0</span>)</a></li>
                          <li><a href="#tabquestions" data-toggle="tab">Q&A (<span id="questioncount">0</span>)</a></li>
                          <li><a href="#tabtags" data-toggle="tab">Tags (<span id="tagcount">0</span>)</a></li>
                      </ul>
                  </div>
              </div>
              <div class="panel-body">
                  <div class="tab-content">
                      <div class="tab-pane fade in active" id="taball">
                          <p>General Search Results</p>
                          <div class="row sresults-row">
                          </div>
                          <div class="row">
                              <div class="col-lg-12">
                                  <div class="pull-right">
                                        <button class="btn btn-default next-tab" type="button"><span class="glyphicon glyphicon-chevron-right"></span> Next</button>
                                  </div>
                              </div>
                          </div>
                      </div>
                      <div class="tab-pane fade" id="tabnotes">
                          <p>Matching Notes</p>
                          <div class="row sresults-row">
                          </div>
                          <div class="row">
                              <div class="col-lg-12">
                                  <div class="pull-right">
                                      <button class="btn btn-default previous-tab" type="button"><span class="glyphicon glyphicon-chevron-left"></span> Previous</button>
                                      <button class="btn btn-default next-tab" type="button"><span class="glyphicon glyphicon-chevron-right"></span> Next</button>
                                  </div>
                              </div>
                          </div>
                      </div>
                      <div class="tab-pane fade" id="tabprofiles">
                          <p>Matching Users</p>
                          <div class="row sresults-row">
                          </div>
                          <div class="row">
                              <div class="col-lg-12">
                                  <div class="pull-right">
                                      <button class="btn btn-default previous-tab" type="button"><span class="glyphicon glyphicon-chevron-left"></span> Previous</button>
                                      <button class="btn btn-default next-tab" type="button"><span class="glyphicon glyphicon-chevron-right"></span> Next</button>
                                  </div>
                              </div>
                          </div>
                          
                      </div>
                      <div class="tab-pane fade" id="tabquestions">
                          <p>Matching Questions</p>
                          <div class="row sresults-row">
                          </div>
                          <div class="row">
                              <div class="col-lg-12">
                                  <div class="pull-right">
                                      <button class="btn btn-default previous-tab" type="button"><span class="glyphicon glyphicon-chevron-left"></span> Previous</button>
                                      <button class="btn btn-default next-tab" type="button"><span class="glyphicon glyphicon-chevron-right"></span> Next</button>
                                  </div>
                              </div>
                          </div>
                            
                      </div>
                      <div class="tab-pane fade" id="tabtags">
                          <p>Matching Tags</p>
                          <div class="row sresults-row">
                          </div>
                          <div class="row">
                              <div class="col-lg-12">
                                  <div class="pull-right">
                                      <button class="btn btn-default previous-tab" type="button"><span class="glyphicon glyphicon-chevron-left"></span> Previous</button>
                                      <button class="btn btn-default next-tab" type="submit"><span class="glyphicon glyphicon-chevron-ok"></span> Submit</button>
                                  </div>
                              </div>
                          </div>
                          
                      </div>
                  </div>
              </div>
           </div>
      </div>
    </div>
  </div>
</div>
