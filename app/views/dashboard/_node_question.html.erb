<div class="col-md-6">
  <div class="note note-question">

    <div class="header-icon"><i class="fa fa-question-circle"></i></div>
 
    <% if node.main_image %>
      <a class="img" href="<%= node.path %>"><img src="<%= node.main_image.path(:default) %>" style="width:100%;" /></a>
    <% end %>
 
    <h4><a href="<%= node.path %>"><%= node.title %></a></h4>

    <a class="btn btn-default btn-xs pull-right respond answer">Post an answer</a>
 
    <p class="meta">Question <%= render partial: "dashboard/node_meta", locals: { node: node } %></p>

  </div>
</div>
