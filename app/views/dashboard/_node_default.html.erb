<div class="col-md-6 note-container-note">
  <div class="note note-default<% if node.status == 4 %> moderated<% end %>">

    <% if node.status == 4 %>
      <p class="alert alert-warning moderated">
        <% if logged_in_as(['admin','moderator']) %>
          Moderate first-time post: <br class="hidden-xs hidden-sm"/>
          <a class="btn btn-default btn-xs" href="/moderate/publish/<%= node.id %>">Approve</a>
          <a class="btn btn-default btn-xs" href="/moderate/spam/<%= node.id %>">Spam</a>
        <% else %>
          Pending approval by <a href='/wiki/moderation'>community moderators</a>. Please be patient!
        <% end %>
      </p>
    <% end %>

    <% if node.main_image %>
      <a class="img" href="<%= node.path %>"><img src="<%= node.main_image.path(:default) %>" style="width:100%;" /></a>
    <% end %>
 
    <h4><a href="<%= node.path %>"><%= node.title %></a></h4>
 
    <p class="meta"><%= render partial: "dashboard/node_meta", locals: { node: node } %></p>

    <hr style="display:none;" class="bottom" />

  </div>
</div>
